# direnv configuration for Votebox
# Automatically loads the Nix development shell when entering the directory

# Check if Nix flakes are available
if has nix_direnv_version || has nix; then
  # Use nix flakes
  use flake
else
  echo "⚠️  Nix is not installed or nix-direnv is not configured"
  echo "Install Nix and configure nix-direnv for automatic environment loading"
fi
