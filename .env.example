# Votebox Environment Variables Example
# Copy this file to .env and fill in your values

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL
POSTGRES_USER=votebox
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=votebox_dev
POSTGRES_PORT=5432

# Database URL (used by Prisma)
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?schema=public"

# ============================================================================
# Redis Configuration
# ============================================================================

REDIS_PASSWORD=change_this_redis_password
REDIS_PORT=6379
REDIS_URL="redis://:${REDIS_PASSWORD}@localhost:6379"

# ============================================================================
# Application Configuration
# ============================================================================

# Environment
NODE_ENV=development

# API Port
PORT=4000

# ============================================================================
# Authentication & Security
# ============================================================================

# JWT Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_EXPIRES_IN=24h

# JWT Refresh Token
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_characters_long
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# Spotify API Configuration
# ============================================================================

# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================================================
# Rate Limiting
# ============================================================================

# Throttle settings
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Vote rate limiting (per session)
VOTE_RATE_LIMIT=3
VOTE_RATE_WINDOW=3600

# ============================================================================
# Next.js Frontend Configuration
# ============================================================================

# API URL (public - used by browser)
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

